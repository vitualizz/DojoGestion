!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Dojo
    = csrf_meta_tags
    = csp_meta_tag
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    #app.is-flex
      - if user_signed_in?
        %navmenu.is-relative{username: current_user.username, type: current_user.type, navbar: navbar.to_json, "data-turbolinks": "false"}
      %main.full_width
        = yield
    :javascript
      flashMessage(#{raw flash.map{|level, messages| [level, messages]}})
