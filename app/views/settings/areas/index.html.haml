%h1 Listing areas

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @areas.each do |area|
      %tr
        %td= area.name
        %td= link_to 'Show', area
        %td= link_to 'Edit', edit_area_path(area)
        %td= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to "New", new_settings_area_path, remote: true, data: { modal: true }
